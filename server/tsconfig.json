{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2023"
    ],
    "module": "node16",
    "outDir": "build",
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": [
        "./*"
      ],
      "@interfaces/*": [
        "./interfaces/*"
      ],
      "@repositories/*": [
        "./repositories/*"
      ],
      "@routes/*": [
        "./routes/*"
      ],
      "@usecases/*": [
        "./usecases/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}